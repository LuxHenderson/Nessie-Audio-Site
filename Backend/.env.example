# Environment Configuration Template
# Copy this file to .env.development, .env.staging, or .env.production
# Environment is auto-detected based on hostname/context

# Server Configuration
PORT=8080
ENV=development

# Database
DATABASE_PATH=./nessie_store.db

# Printful API
PRINTFUL_API_KEY=your_printful_api_key_here
PRINTFUL_API_URL=https://api.printful.com

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Redirect URLs
STRIPE_SUCCESS_URL=http://localhost:5500/cart-success.html
STRIPE_CANCEL_URL=http://localhost:5500/cart-cancel.html

# Printful Webhook Secret
PRINTFUL_WEBHOOK_SECRET=your_random_secret_token_here

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:5500,http://127.0.0.1:5500

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_FROM_EMAIL=your_email@gmail.com
SMTP_FROM_NAME=Your Store Name

# Admin Email (for alerts)
ADMIN_EMAIL=admin@example.com

# Logging Level (debug, info, warn, error)
LOG_LEVEL=info
